<div class="row">
  <div class="col-sm-8 col-sm-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="panel-title">Question: <%= @question.title %></h1>
      </div>
      <div class="panel-body">
        <p>
          <%= @question.description %>
        </p>
        <br />
        <%= link_to 'Edit', edit_question_path(@question), class: "btn btn-primary float-left" %>
        <%= button_to 'Delete', { action: "destroy" }, { method: :delete, class: "btn btn-danger float-left" } %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-8 col-sm-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Answers:</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% if @question.answers.empty? %>
            <li>
              This question hasn't been answered yet
            </li>
          <% else %>
            <% @question.answers.order(created_at: :asc).each do |answer| %>
              <li>
                <%= answer.description %>
              </li>
              <% end %>
          <% end %>
        </ul>
        <%= link_to 'Answer Question', new_question_answer_path(@question) %>
      </div>
    </div>
  </div>
</div>
